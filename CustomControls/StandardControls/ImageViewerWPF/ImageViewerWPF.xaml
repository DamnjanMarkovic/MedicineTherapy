<UserControl x:Class="Avanse.GUI.WPF.Controls.ImageViewerWPF.ImageViewerWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Avanse.GUI.WPF.Controls.ImageViewerWPF"
             xmlns:controls="clr-namespace:Avanse.GUI.WPF.Controls"
             mc:Ignorable="d" 
                Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <controls:CustomTextBox Grid.Row="0" x:Name="textBoxPageNumber" IsEnabled="False"
                                Height="50" Width="200" Text="1" 
                                HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                FontSize="20" Foreground="White">

        </controls:CustomTextBox>
        <DockPanel Name="_mainPanel" Background="Black" Grid.Row="1">

            <ToolBarTray Name="_annToolbarTray" Orientation="Vertical" IsLocked="True" DockPanel.Dock="Right" />


        </DockPanel>
    </Grid>
</UserControl>
